    {{#if car.img_url }}
    <img class="review-img" src="https://www.cnet.com/a/img/resize/5ca0202a0dbf516b48a775dae4a940d7d6631f07/hub/2022/10/25/d7877a73-eae0-4ede-8d28-0bcab16a5620/2023-honda-civic-type-r-promo.jpg?auto=webp&width=1920">
